{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": false,
    "isolatedModules": true,
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.js", "__tests__"]
}

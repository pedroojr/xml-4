# Configurações do Servidor
PORT=3011
NODE_ENV=development

# Banco de Dados
DB_PATH=./database.sqlite

# Redis Cache (Opcional)
# Se não configurado, o sistema funcionará sem cache
REDIS_URL=redis://localhost:6379

# Segurança
ALLOWED_ORIGINS=http://localhost:3018,http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configurações de Backup
BACKUP_DIR=./backups
MAX_BACKUPS=10
BACKUP_SCHEDULE=0 2 * * *

# Configurações de Logging
LOG_LEVEL=info
LOG_DIR=./logs"